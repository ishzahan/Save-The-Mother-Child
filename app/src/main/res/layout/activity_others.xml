<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:id="@+id/txt_others"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="left"
      android:paddingTop="10dp"
      android:text="Others"
      android:textSize="30sp"
      />
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_search_hospitals"
      android:text="Search for Hospitals"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_search_doctors"
      android:text="Search for Doctors"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_others_ovulation_planner"
      android:text="SOvulation Planner"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_others_all_week_tips"
      android:text="All Week Tips"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_others_child_care"
      android:text="Child Care"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_others_change_data"
      android:text="Change your Data"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_others_help"
      android:text="Help"
      />
</LinearLayout>